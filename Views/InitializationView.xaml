<Page x:Class="Entering.InitializationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Entering"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Background="White"
      Title="Инициализация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Margin="10">
            <TextBlock Text="Инструкция" FontSize="24" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Instruction}" Margin="10,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
        <ScrollViewer Grid.Column="1">
            <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="В буфере" FontSize="24" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Buffer}" Margin="10,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
